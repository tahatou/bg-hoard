{
  "cli": "nx",
  "id": "util-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "Description",
      "x-prompt": {
        "message": "Which directory do you want the lib to be in?",
        "type": "list",
        "items": [
          {
            "value": "store",
            "label": "Store"
          },
          {
            "value": "api",
            "label": "Api"
          },
          {
            "value": "shared",
            "label": "Shared"
          }
        ]
      },
      "enum": [
        "store",
        "api",
        "shared"
      ]
    }
  },
  "required": ["name"]
}
